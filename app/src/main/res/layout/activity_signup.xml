<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signupActivity">

    <ImageView
            android:layout_width="1199dp"
            android:layout_height="865dp" app:srcCompat="@drawable/main_background"
            android:id="@+id/backgroundImageView2"
            android:background="#0A3C91" android:backgroundTint="#0A3C91"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.478" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Sign up"
            android:layout_width="281dp"
            android:layout_height="56dp"
            android:id="@+id/signupButton" android:fontFamily="@font/roboto"
            android:textAllCaps="false" android:textColorLink="#FFFFFF" android:textColor="#FFFFFF"
            android:backgroundTint="#EE2737" android:textSize="17sp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/repeatTextView" android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="470dp"
            android:layout_height="832dp" android:background="#800A3C91"
            android:id="@+id/gradientImageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/backgroundImageView"
            app:layout_constraintHorizontal_bias="0.997" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.504"
            android:contentDescription="TODO" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="76dp" app:layout_constraintBottom_toBottomOf="@+id/backgroundImageView"/>
    <EditText
            android:padding="9dp"
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextView"
            android:background="@drawable/border_textview"
            android:textColor="#FFFFFF" android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:importantForAutofill="no"
            android:fontFamily="@font/roboto" android:hint="Password" android:textColorHint="#88FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/emailTextView"/>
    <EditText
            android:padding="9dp"
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/repeatTextView"
            android:background="@drawable/border_textview"
            android:textColor="#FFFFFF" android:layout_marginStart="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:importantForAutofill="no"
            android:fontFamily="@font/roboto" android:hint="Repeat Password" android:textColorHint="#88FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextView"/>
    <EditText
            android:padding="9dp"
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTextView"
            android:background="@drawable/border_textview"
            android:textColor="#FFFFFF" android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:importantForAutofill="no"
            android:fontFamily="@font/roboto" android:textColorHint="#88FFFFFF" android:hint="E-Mail"
            tools:layout_editor_absoluteY="263dp"/>
    <TextView
            android:text="Welcome!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeTextView" android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto" android:textSize="28sp" android:layout_marginTop="204dp"
            app:layout_constraintTop_toTopOf="@+id/gradientImageView2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>