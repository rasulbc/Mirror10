<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="1199dp"
            android:layout_height="865dp" app:srcCompat="@drawable/main_background"
            android:id="@+id/backgroundImageView"
            android:background="#0A3C91" android:backgroundTint="#0A3C91"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.478" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="470dp"
            android:layout_height="832dp" android:background="#800A3C91"
            android:id="@+id/gradientImageView"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/backgroundImageView"
            app:layout_constraintHorizontal_bias="0.939" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.504"
            android:contentDescription="TODO" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="76dp" app:layout_constraintBottom_toBottomOf="@+id/backgroundImageView"/>
    <Button
            android:text="Sign in"
            android:layout_width="114dp"
            android:layout_height="54dp"
            android:id="@+id/signinButton" android:fontFamily="@font/roboto"
            android:textAllCaps="false" android:textColorLink="#FFFFFF" android:textColor="#FFFFFF"
            android:backgroundTint="#0A3C91" android:textSize="17sp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/sloganTextView"
            app:layout_constraintStart_toEndOf="@+id/signupButton" android:layout_marginStart="44dp"/>
    <TextView
            android:text="Photography has never been this much easy!"
            android:layout_width="252dp"
            android:layout_height="83dp"
            android:id="@+id/sloganTextView"
            android:textSize="24sp" android:textColor="#FFFFFF"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/gradientImageView"
            app:layout_constraintBottom_toBottomOf="@+id/gradientImageView" android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="@+id/gradientImageView" app:layout_constraintHorizontal_bias="0.137"
            app:layout_constraintVertical_bias="0.417" android:fontFamily="@font/roboto"/>
    <Button
            android:text="Sign up"
            android:layout_width="114dp"
            android:layout_height="54dp"
            android:id="@+id/signupButton" android:fontFamily="@font/roboto"
            android:textAllCaps="false" android:textColorLink="#FFFFFF" android:textColor="#FFFFFF"
            android:backgroundTint="#EE2737" android:textSize="17sp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/sloganTextView" android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>