<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modeSelectActivity">

    <TextView
            android:text="Select the mode"
            android:layout_width="411dp"
            android:layout_height="65dp"
            android:id="@+id/infoTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:gravity="center" android:textColor="#FFFFFF"
            android:background="#235BA8" app:layout_constraintHorizontal_bias="0.526" android:textSize="26sp"
            android:fontFamily="@font/roboto"/>
    <ImageView
            android:layout_width="293dp"
            android:layout_height="208dp" app:srcCompat="@drawable/main_background"
            tools:layout_editor_absoluteX="59dp" android:id="@+id/imageView" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/infoTextView"/>
    <ImageView
            android:layout_width="239dp"
            android:layout_height="261dp" app:srcCompat="@drawable/mode2" tools:layout_editor_absoluteY="413dp"
            tools:layout_editor_absoluteX="80dp" android:id="@+id/imageView2"/>
</android.support.constraint.ConstraintLayout>