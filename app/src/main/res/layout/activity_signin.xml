<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signinActivity">

    <ImageView
            android:layout_width="1199dp"
            android:layout_height="865dp" app:srcCompat="@drawable/main_background"
            android:id="@+id/backgroundImageView3"
            android:background="#0A3C91" android:backgroundTint="#0A3C91"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:padding="9dp"
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextView2"
            android:background="@drawable/border_textview"
            android:textColor="#FFFFFF" android:layout_marginStart="76dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="382dp"
            android:importantForAutofill="no"
            android:fontFamily="@font/roboto" android:hint="Password" android:textColorHint="#AAFFFFFF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="53dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Sign in"
            android:layout_width="281dp"
            android:layout_height="56dp"
            android:id="@+id/signinButton2" android:fontFamily="@font/roboto"
            android:textAllCaps="false" android:textColorLink="#FFFFFF" android:textColor="#FFFFFF"
            android:backgroundTint="#0A3C91" android:textSize="17sp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextView2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.605"/>
    <ImageView
            android:layout_width="416dp"
            android:layout_height="772dp" android:background="#800A3C91"
            android:id="@+id/gradientImageView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/backgroundImageView"
            app:layout_constraintHorizontal_bias="0.995" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.179"
            android:contentDescription="TODO" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="76dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:padding="9dp"
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTextView2"
            android:background="@drawable/border_textview"
            android:textColor="#FFFFFF" android:layout_marginStart="76dp"
            app:layout_constraintStart_toStartOf="parent"
            android:importantForAutofill="no"
            android:fontFamily="@font/roboto" android:textColorHint="#88FFFFFF" android:hint="E-Mail"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/welcomeTextView2"/>
    <TextView
            android:text="Welcome back!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeTextView2" android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto" android:textSize="28sp" android:layout_marginTop="248dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.561"/>
    <TextView
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotTextView" android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backgroundImageView3"
            app:layout_constraintEnd_toStartOf="@+id/backgroundImageView3" android:textColorLink="#FFFFFF"/>
</android.support.constraint.ConstraintLayout>